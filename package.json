{
  "name": "@synapsync/agent-sync-sdk",
  "version": "0.2.0",
  "description": "TypeScript SDK for syncing AI agent cognitives (skills, prompts, rules) across 39+ coding agents",
  "author": "SynapSync <info@synapsync.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SynapSync/agent-sync-sdk.git"
  },
  "homepage": "https://github.com/SynapSync/agent-sync-sdk",
  "bugs": {
    "url": "https://github.com/SynapSync/agent-sync-sdk/issues"
  },
  "keywords": [
    "ai",
    "agents",
    "sync",
    "cognitives",
    "skills",
    "prompts",
    "cursor",
    "claude",
    "copilot",
    "sdk"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.2",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "compile-agents": "tsx src/agents/compile/compile.ts",
    "compile-agents:quiet": "tsx src/agents/compile/compile.ts --quiet",
    "prebuild": "pnpm run compile-agents:quiet",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "yaml": "^2.8.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
